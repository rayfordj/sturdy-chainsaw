#Default options 
VOL_OPTS = -v foreman_vol:/var/foreman-vol:Z 


#Default options 
BUILD_OPTS = 


#Default options 
RUN_OPTS =  --hostname="localhost.localdomain" \
	-p 443:443 \
        -p 8443:8443 \
        -p 8140:8140 \
        ${VOL_OPTS}
        

#Default options 
EXEC_OPTS =  --enable-foreman-plugin-discovery \
        --foreman-plugin-discovery-source-url=http://downloads.theforeman.org/discovery/releases/3.0/ \
        --foreman-plugin-discovery-install-images=true \
        --foreman-plugin-discovery-tftp-root /var/foreman-vol/var/lib/tftpboot \
        --enable-foreman-plugin-remote-execution \
        --certs-ssl-build-dir /var/foreman-vol/root/ssl-build \
        --foreman-app-root /var/foreman-vol/usr/share/foreman \
        --foreman-puppet-home /var/foreman-vol/var/lib/puppet \
        --foreman-puppet-ssldir /var/foreman-vol/var/lib/puppet/ssl \
        --foreman-proxy-dir /var/foreman-vol/usr/share/foreman-proxy \
        --foreman-proxy-puppetdir /var/foreman-vol/etc/puppet \
        --foreman-proxy-ssldir /var/foreman-vol/var/lib/puppet/ssl \
        --foreman-proxy-tftp-root /var/foreman-vol/var/lib/tftpboot \
        --foreman-proxy-plugin-ansible-ansible-dir /var/foreman-vol/etc/ansible \
        --foreman-proxy-plugin-pulp-mongodb-dir /var/foreman-vol/var/lib/mongodb \
        --foreman-proxy-plugin-pulp-pulp-content-dir /var/foreman-vol/var/lib/pulp/content \
        --foreman-proxy-plugin-pulp-pulp-dir /var/foreman-vol/var/lib/pulp \
        --foreman-proxy-plugin-pulp-puppet-content-dir /var/foreman-vol/etc/puppet/environments \
        --puppet-codedir /var/foreman-vol/etc/puppet \
        --puppet-dir /var/foreman-vol/etc/puppet \
        --puppet-sharedir /var/foreman-vol/usr/share/puppet \
        --puppet-vardir /var/foreman-vol/var/lib/puppet \
        --puppet-server-dir /var/foreman-vol/etc/puppet \
        --enable-foreman-proxy-plugin-remote-execution-ssh